<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_bar_background"
    tools:context="test.myprojects.com.callproject.StartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bLogIn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/call_temp" />

    </RelativeLayout>
    

    <Button
        android:id="@+id/bLogIn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/bSignUp"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:text="@string/log_in"
        android:textColor="@color/blue_default"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:text="@string/sign_up"
        android:textColor="@color/blue_default"
        android:textSize="20sp" />

</RelativeLayout>
